<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:liftOnScrollTargetViewId="@id/recycler_view">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:title="@string/profile_title"
                app:titleTextColor="@color/white"
                app:titleTextAppearance="@style/TopBarTextStyle"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:paddingVertical="4dp"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="72dp"
                    android:layout_height="72dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_centerInParent="true"
                        android:background="@color/categoryBlue"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_edit"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Yanto"/>
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:text="Yanto"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menu_language"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="true"
                style="?attr/materialCardViewFilledStyle"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                android:layout_margin="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ship_icon"
                        style="?attr/materialCardViewFilledStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        app:cardBackgroundColor="@color/colorCyan"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="4dp"
                            app:srcCompat="@drawable/ic_lang" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_language"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_toRightOf="@id/ship_icon"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:id="@+id/logoutButton"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signout_button"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build v0.2.2 rev 2"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
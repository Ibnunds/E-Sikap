<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".input.cop.CopInputSignatureActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/sscec_rekomendasi_add_data_title"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            app:titleTextAppearance="@style/TopBarTextStyle"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:id="@+id/inputFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kesimpulan_title"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="14dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/radio_title_pemeriksaan_obat_p3k"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/radioObatP3K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_obatp3k_true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/radio_lengkap"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/radio_obatp3k_false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/radio_tidak_lengkap"
                            android:textSize="12sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pelanggaran_karantina_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginVertical="8dp"/>

                    <RadioGroup
                        android:id="@+id/radioKarantinaPinalti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_karantinapinalti_true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/radio_istrue"/>
                        <RadioButton
                            android:id="@+id/radio_karantinapinalti_false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/radio_isfalse"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/document_kesehatan_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginVertical="8dp"/>

                    <RadioGroup
                        android:id="@+id/radioDokKes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_dokkes_lengkapberlaku"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/radio_lengkap_berlaku"/>
                        <RadioButton
                            android:id="@+id/radio_dokkes_lengkaptidakberlaku"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/radio_lengkap_tidak_berlaku"/>
                        <RadioButton
                            android:id="@+id/radio_dokkes_tidaklengkaptidakberlaku"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/radio_tidak_lengkap_tidak_berlaku"/>
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/penerbitan_dokument_title"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="14dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dokumen_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginVertical="8dp"/>

                    <RadioGroup
                        android:id="@+id/radioTipeDok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_tipedok_fp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/dokumen_fp"/>
                        <RadioButton
                            android:id="@+id/radio_tipedok_rp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="@string/dokumen_rp"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="@string/tanggal_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:focusable="false"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etJam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:hint="@string/jam_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:cursorVisible="false"
                            android:focusable="false"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/prevDoc"
                        android:layout_width="154dp"
                        android:layout_height="210dp"
                        android:background="@drawable/bg_signature_pad"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnSelectDoc"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_dokumen_title"
                        app:icon="@drawable/ic_doc"
                        app:iconPadding="8dp"/>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/signKaptenButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:text="@string/add_sign_kapten_button"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    />

                <LinearLayout
                    android:id="@+id/signedKapten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signature_pad"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:padding="14dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSignHelpKapten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/press_to_update_sign"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/ivSignKapten"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kapten_kapal_title"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvKapten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kapten_title"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/signOfficerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_sign_petugas_button"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    />

                <LinearLayout
                    android:id="@+id/signedOfficer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signature_pad"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:padding="14dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSignHelpPetugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/press_to_update_sign"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/ivSignOfficer"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quarantine_officer_title"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvPetugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/petugas_title"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/addSignPT2Button"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_sign_pt2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <LinearLayout
                    android:id="@+id/signPT2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signature_pad"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:padding="14dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/press_to_update_sign"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/ivSignPT2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/petugas2_title"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvPetugas2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/petugas2_title"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvPetugas2NIP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nip_petugas2_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btnDeleteSign2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_sign"
                        android:textColor="@color/red"/>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:id="@+id/addSignPT3Button"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_sign_pt3"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    />
                <LinearLayout
                    android:id="@+id/signPT3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signature_pad"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:padding="14dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/press_to_update_sign"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/ivSignPT3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="14dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/petugas3_title"
                        android:textSize="14sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvPetugas3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/petugas3_title"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tvPetugas3NIP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nip_petugas3_title"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"/>
                    <Button
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/btnDeleteSign3"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_sign"
                        android:textColor="@color/red"/>
                </LinearLayout>

                <Button
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:id="@+id/saveButton"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_title" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>